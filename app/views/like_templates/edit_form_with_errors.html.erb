<% if @like.errors.any? %>
  <% @like.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit like #<%= @like.id %>
</h1>

<hr>

<form action="/update_like/<%= @like.id %>" method="post">


  <div class="form-group">
    <label for="article_id">
      Article
    </label>

    <%= select_tag(:article_id, options_from_collection_for_select(Article.all, :id, :restaurant_yelp_id, @like.article_id), :class => "form-control") %>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update like
  </button>
</form>

<hr>

<a href="/likes">
  Go back
</a>
