<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Like #<%= @like.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/likes" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <!-- Edit link like start -->
      <div class="col">
        <% if current_user == @like.fan %>
          <a href="/likes/<%= @like.id %>/edit" class="btn btn-block btn-sm btn-outline-secondary">
            Edit like
          </a>
        <% end %>
      </div>
      <!-- Edit link like end -->

      <!-- Delete link like start -->
      <div class="col">
        <% if current_user == @like.fan %>
          <a href="/delete_like/<%= @like.id %>" class="btn btn-block btn-sm btn-outline-secondary">
            Delete like
          </a>
        <% end %>
      </div>
      <!-- Delete link like end -->
    </div>

    <dl>
      <dt>
        Fan
      </dt>
      <!-- Display fan_id start -->
      <dd>
        <% if @like.fan.present? %>
          <a href="/users/<%= @like.fan_id %>">
            <%= @like.fan.email %>
          </a>
        <% end %>
      </dd>
      <!-- Display fan_id end -->

      <dt>
        Article
      </dt>
      <!-- Display article_id start -->
      <dd>
        <% if @like.article.present? %>
          <a href="/articles/<%= @like.article_id %>">
            <%= @like.article.restaurant_yelp_id %>
          </a>
        <% end %>
      </dd>
      <!-- Display article_id end -->

      <dt>
        Created at
      </dt>
      <!-- Display created_at start -->
      <dd>
        <%= time_ago_in_words(@like.created_at) %> ago
      </dd>
      <!-- Display created_at end -->

      <dt>
        Updated at
      </dt>
      <!-- Display updated_at start -->
      <dd>
        <%= time_ago_in_words(@like.updated_at) %> ago
      </dd>
      <!-- Display updated_at end -->
    </dl>
  </div>
</div>

