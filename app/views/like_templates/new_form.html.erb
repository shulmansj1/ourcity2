<h1>
  Add a new like
</h1>


<hr>

<!-- Form like start -->
<form action="/create_like" method="post">
<!-- Form like end -->

  <!-- Label and input for fan_id start -->
  <div class="form-group">
    <label for="fan_id">
      Fan
    </label>

    <!-- Input for fan_id start -->
    <%= select_tag(:fan_id, options_from_collection_for_select(User.all, :id, :email, @like.fan_id), :class => "form-control") %>
    <!-- Input for fan_id end -->
  </div>
  <!-- Label and input for fan_id end -->

  <!-- Label and input for article_id start -->
  <div class="form-group">
    <label for="article_id">
      Article
    </label>

    <!-- Input for article_id start -->
    <%= select_tag(:article_id, options_from_collection_for_select(Article.all, :id, :restaurant_yelp_id, @like.article_id), :class => "form-control") %>
    <!-- Input for article_id end -->
  </div>
  <!-- Label and input for article_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Create like
  </button>
</form>

<hr>

<a href="/likes">
  Go back
</a>
